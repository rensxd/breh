		return veldGroote;
	}


	public void setVeldGroote(String veldGroote) {
		this.veldGroote = veldGroote;
	}


	MineField(){
		
		vakje = new HashMap<String, Square>();
	}
	
	
	void addSquare(String index) {
		this.aantal = Integer.parseInt(index);
		this.a = 'A';
		for (int i = 1; i <= aantal; i++) {
			vakje.put("" + a + i, new Square());
			
		}
		vakje.get(index);
		System.out.println("ddd " + vakje.keySet());
		
		
		System.out.println(index + " en ");
		
		
	}
	
	
