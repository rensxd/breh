import java.util.Scanner;

public class Game {

	private MineField field;
	private int grootte;

	public Game(int grootte) {
		this.grootte = grootte;

		setGrootte(grootte);

		field = new MineField();
		field.setVeldGrootte(grootte);
		field.makeField();
		field.print();
	}

	void setGrootte(int grootte) {
		this.grootte = grootte;
	}

	int getGrootte() {
		return grootte;
	}

	public void play() {

	}

}
