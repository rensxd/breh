import java.util.HashMap;

public class MineField {

	HashMap<String, Square> vakje;
	int bombFound;
	Game game;
	int aantal;
	int veldGrootte;
	String aantalString;


	MineField(){
		vakje = new HashMap<String, Square>();
		makeField();
	}
	
	
	void makeField() {
		
		for (int i = 1; i <= this.aantal; i++) {
			for (int j = 1; j <= this.aantal; j++) {
			String key = "" + ((char) ('a' + i)) + j;
				vakje.put(key, new Square());
			}
		}
//		System.out.println("DEBUG " + vakje.keySet());
//		
//		
//		System.out.println(getVeldGroote() + " DEBUGG ");
		
		
	}
	
	public int getVeldGrootte() {
		return veldGrootte;
	}


	public void setVeldGrootte(String veldGrootte) {
		
		this.aantalString = veldGrootte;
		try {
			this.aantal = Integer.parseInt(this.aantalString);
		} catch (NumberFormatException e) {
			System.out.println("Geen nummer");
		}
		
		
	}
	
	public void print() {
		
		
		
		
		
		if (MainClass.CHEAT) {
			
			
		}
		
	}
	
	
}
