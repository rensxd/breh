import java.util.Scanner;

public class Game {

	MineField field;
	Scanner input;
	int grootte;
	MineSweeper ms;
	
	Game (){
		
		ms = new MineSweeper();
		input = new Scanner(System.in);
		field = new MineField();
		geefGrootteDoor();
		
		
	}
	
	void geefGrootteDoor() {
		this.grootte = ms.getfieldSize();
		field.setVeldGrootte(this.grootte);
	}
	
	public void play() {
		
		
	}
	
}
